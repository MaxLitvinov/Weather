<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WeatherApp" />

    <style name="WeatherApp.Widget" />

    <style name="WeatherApp.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingStart">@dimen/size_8_dp</item>
        <item name="android:paddingEnd">@dimen/size_8_dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
    </style>

    <style name="WeatherApp.Widget.Button.Shadowed">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="WeatherApp.Widget.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
    </style>

    <style name="WeatherApp.Widget.TextView.Shadowed">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
    </style>
</resources>